<Window x:Class="BevasarloListaWPF.Hozzaadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BevasarloListaWPF"
        mc:Ignorable="d"
        Title="Új termék" Height="200" Width="300">
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Content="Termék:" HorizontalAlignment="Left" Margin="20,0,0,0"></Label>
		<TextBox Grid.Row="0" x:Name="TermekNev" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
		<Label Grid.Row="1" Content="Mennyiség:" HorizontalAlignment="Left" Margin="20,0,0,0"></Label>
		<TextBox Grid.Row="1" x:Name="Mennyiseg" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
		<Label Grid.Row="2" Content="Egységár:" HorizontalAlignment="Left" Margin="20,0,0,0"></Label>
		<TextBox Grid.Row="2" x:Name="Ar" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
		<Label Grid.Row="3" Content="Tipus:" HorizontalAlignment="Left" Margin="20,0,0,0"></Label>
		<ComboBox Grid.Row="3" x:Name="Tipus" SelectedIndex="0" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0">
			<ComboBoxItem Content="A"/>
			<ComboBoxItem Content="B"/>
			<ComboBoxItem Content="C"/>
			<ComboBoxItem Content="D"/>
		</ComboBox>
		<StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
			<Button Content="Ok" Width="60" Height="25" Margin="10" Click="Ok"/>
			<Button Content="Mégse" Width="60" Height="25" Margin="10" Click="Megse"/>
		</StackPanel>
	</Grid>
</Window>
